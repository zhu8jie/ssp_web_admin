.login {
  width: 100%;
  height: 100%;
  min-width: 1200px;
  background: url('~@/assets/image/admin_bg.jpg') no-repeat center center;
  background-size: 100% 100%;
  position absolute;

  .login_content {
    width: 1100px;
    height 450px
    position relative
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    justify-content space-between

    .login_left {
      width 454px
      .left_text {
        font-size 30px
        color #FFFFff
        margin-bottom 25px
        span {
          color #4AADFF
        }
      }
      img {
        width 470px;
      }
    }

    .login_right {
      width 400px
      height 450px
      background: #FFFFFF;
      border-radius: 2px;
      position relative
      .login_bg{
        position absolute
        top:-18px
        right:16px
      }
      .title {
        margin 38px 0px
        text-align center
        img {
          width 58px
        }
      }

      .form_con {
        display flex
        width 340px
        margin 0 30px 19px
        background: #F5F5FB;
       /deep/ .ivu-form-item-content{
          height 45px
          line-height 45px
        }
        &.yan_code{
          width 220px
          position relative
        }
        .icon {
          display inline-block
          width 40px
          height 40px
          line-height: 40px;
          font-size: 18px;
          color #9CA3AA
          vertical-align: middle;
          img {
            width 100%
          }
        }
        .yan_img{
          vertical-align: middle;
          width:100px;
          height: 40px
          position absolute
          right -135px
          top 0px
        }
        .input-class {
          width 295px
          /deep/ .ivu-input-suffix i{
            font-size 18px
            line-height 45px
          }
        }
        .input-code {
          width 160px
        }
      }

      .login_save {
        margin-top 40px
        button {
          width 340px
          margin 5px 30px 24px
          height 50px
          line-height 50px
          font-size: 20px;
          font-family: Microsoft YaHei;
          font-weight: 400;
          color: #FFFFFF;
          background: #4083F8;
        }
      }
    }
  }
}
